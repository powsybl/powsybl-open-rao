{
  "$schema": "https://json-schema.org/draft/2020-12/schema#",
  "$id": "resource:/schemas/crac/minimum-viable-crac.json",
  "title": "Minimum Viable CRAC",
  "description": "Minimum Viable CRAC data for electric grid operation",
  "type": "object",
  "properties": {
    "type": {
      "const": "CRAC"
    },
    "version": {
      "type": "string",
      "pattern": "^[1-9]\\d*\\.\\d+$"
    },
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    }
  },
  "additionalProperties": true,
  "required": [
    "type",
    "version",
    "id",
    "name"
  ]
}
