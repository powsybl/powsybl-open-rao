{
  "$schema": "https://json-schema.org/draft/2020-12/schema#",
  "$id": "resource:/schemas/hvdc-range-action/hvdc-range-action-v2.8.json",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": [
        "string",
        "null"
      ]
    },
    "operator": {
      "type": [
        "string",
        "null"
      ]
    },
    "activationCost": "number",
    "variationCosts": {
      "$ref": "resource:/schemas/variation-costs/variation-costs-v2.6.json"
    },
    "groupId": {
      "type": [
        "string",
        "null"
      ]
    },
    "speed": {
      "type": "number"
    },
    "networkElementId": {
      "type": "string"
    },
    "ranges": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "max": {
            "type": "number"
          },
          "min": {
            "type": "number"
          }
        },
        "additionalProperties": false
      }
    },
    "onInstantUsageRules": {
      "type": "array",
      "items": {
        "$ref": "resource:/schemas/on-instant-usage-rule/on-instant-usage-rule-v2.8.json"
      }
    },
    "onContingencyStateUsageRules": {
      "type": "array",
      "items": {
        "$ref": "resource:/schemas/on-contingency-state-usage-rule/on-contingency-state-usage-rule-v2.8.json"
      }
    },
    "onConstraintUsageRules": {
      "type": "array",
      "items": {
        "$ref": "resource:/schemas/on-constraint-usage-rule/on-constraint-usage-rule-v2.8.json"
      }
    },
    "onFlowConstraintInCountryUsageRules": {
      "type": "array",
      "items": {
        "$ref": "resource:/schemas/on-flow-constraint-in-country-usage-rule/on-flow-constraint-in-country-usage-rule-v2.8.json"
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "id",
    "networkElementId",
    "ranges"
  ]
}
